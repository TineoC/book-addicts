@model Biblioteca.User

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book-addicts</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="height: 100%">
    <nav class="navbar navbar-expand-md navbar-light navbar-fixed-top bg-light">
        <a class="navbar-brand" href="~/Books" styles="text-align: center">Inicio</a>

        <div class="collapse navbar-collapse align-items-middle" id="navbarSupportedContent" style="display: flex !important">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Books/Login">Login <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="~/Books/Create">Añadir libro</a>
                </li>
            </ul>
        </div>
    </nav>

    @RenderBody()

    <div class="footer-copyright text-center py-3 bg-dark align-middle navbar-static-bottom">
        <p class="text-light" style="margin:0">&copy; @DateTime.Now.Year - Con mucho &hearts; para Omar Frometa</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
