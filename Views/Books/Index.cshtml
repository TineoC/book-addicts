@model IEnumerable<Biblioteca.Book>

@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>Book Addicts</h1>
    <p class="lead">Es un espacio donde podrás encontrar tus libros favoritos y unirte a nuestra comunidad lectora.</p>
</div>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-sm">
                <a href="~/Books/Details/@item.id">
                    <img src="~/Public/Covers/@item.cover" style="height: 200px; width: auto" />
                </a>

                <div class="book-data">
                    <span class="book-name">
                        @Html.DisplayFor(modelItem => item.title)
                    </span>
                    <p class="book-author">
                        @Html.DisplayFor(modelItem => item.author)
                    </p>
                </div>
            </div>
        </div>
     }

</div>