@model Biblioteca.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout - Login.cshtml";


}

<div class="mx-auto" style="width: 80%">
    <h2>Login</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <form method="post" style="width: 100%">
            <div class="form-group">
                <label>Nombre de usuario</label>
                <input type="text" class="form-control" name="username" placeholder="Escribir nombre de usuario...">
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" name="password" placeholder="Escribir contraseña...">
            </div>
            <div class="d-flex flex-row">
                <button type="submit" name="login" class="btn btn-primary" value="Login" style="margin-right: 20px">Login</button>
                <button type="submit" name="register" value="Register" class="btn btn-link">Ir al Registro</button>
            </div>
        </form>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
