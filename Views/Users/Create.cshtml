@model Biblioteca.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout - Register.cshtml";
}

<div class="mx-auto" style="width: 80%">
    <h2>Registro</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <form method="post" style="width: 100%">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Nombre de usuario</label>
                <input type="text" class="form-control" name="username" placeholder="Escribir nombre de usuario...">
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" class="form-control" name="password" placeholder="Escribir contraseña...">
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Confirmar contraseña</label>
                <input type="password" class="form-control" name="confirm-password" placeholder="Confirmar contraseña...">
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
            <div class="d-flex flex-row">
                <button type="submit" name="register" value="Register" class="btn btn-primary">Registrarme</button>
            </div>
        </form>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
